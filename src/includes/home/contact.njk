<div class="container py-16 md:py-20" id="contact">
  <h2 class="text-center font-header text-4xl font-semibold uppercase text-primary sm:text- lg:text-6xl">
      My contact info
  </h2>

  <div class="flex flex-col pt-16 lg:flex-row">
    {% for channel, detail in site.contact %}
      {% if channel == "email" %}
        {% set icon = "envelope" %}
      {% elif channel == "location" %}
        {% set icon = "map" %}
      {% else %}
        {% set icon = channel %}
      {% endif %}
      <div
      class="w-full border-l-2 border-t-2 border-r-2 border-b-2 border-grey-60 px-6 py-6 sm:py-8 lg:w-1/3">
        <div class="flex items-center">
          <i class="bx bx-{{icon}} text-2xl text-grey-40"></i>
          <p class="pl-2 font-body font-bold uppercase text-grey-40 lg:text-lg">
          My {{channel | title}}
          </p>
        </div>
        <p class="pt-2 text-left font-body font-bold text-primary lg:text-lg">
          {% if channel == "email" %}
            <a href="mailto:{{ detail }}">{{detail}}</a>
          {% else  %}
            {{ detail }}
          {% endif %}

        </p>
      </div>
    {% endfor %}
  </div>
</div>