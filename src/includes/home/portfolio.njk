{% import "macros.njk" as macros %}
<div class="container py-16 md:py-20" id="portfolio">
    <h2 class="text-center font-header text-4xl font-semibold uppercase text-primary sm:text-5xl lg:text-6xl">
        Portfolio
    </h2>
    <h3 class="pt-6 text-center font-header text-xl font-medium text-black sm:text-2xl lg:text-3xl">
        Samples from past work
    </h3>
    <div
        class="mx-auto grid w-full grid-cols-1 gap-8 pt-12 sm:w-3/4 md:gap-10 lg:w-full lg:grid-cols-2">
        {% for page in collections.portfolio %}
            <div class="mx-auto transform transition-all hover:scale-105 md:mx-0">
                <a href="{{page.url}}">
                    <img
                        width="723"
                        height="371"
                        alt="{{page.data.description}}"
                        src="{{page.data.image}}"
                        srcset="{{page.data.image}},
                        {{page.data.image}}&dpr=2 2x,
                        {{page.data.image}}&dpr=3 3x"
                        class="w-full shadow"/>
                </a>
                <p class="text-center italic mt-1">
                    {{page.data.description}}
                </p>
            </div>
        {% endfor %}
    </div>
</div>