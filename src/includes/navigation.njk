<div class="flex justify-center">
    {%- for item in collections.all | eleventyNavigation -%}
        {%- if item.url -%}
            {%- set isCurrent = (item.url == page.url) -%} {%- set isParent = item.url != '/' and item.url in page.url -%}
            <a
                href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}"
                class="block mt-4 lg:inline-block lg:mt-0 text-green-300 hover:text-text-white mr-4 {% if isCurrent or isParent %}underline font-bold{% endif %}"
                {%
                if
                isCurrent
                %}aria-current="page"
                {%
                endif
                %}
            >
                {{ item.title }}
            </a>
        {%- endif -%}
    {%- endfor -%}
    <a 
        href="https://us21.list-manage.com/contact-form?u=386780ea29ed145c2726a5438&form_id=ab45f3aa65dd38077a61bf158db0c9e8"
        class="block mt-4 lg:inline-block lg:mt-0 text-green-300 hover:text-white mr-4 {% if isCurrent or isParent %}underline font-bold{% endif %}""
    >
    Contact
    </a>
</div>