<div class="flex justify-center">
    {%- for item in collections.all | eleventyNavigation -%} {%- if item.url -%}
    {%- set isCurrent = (item.url == page.url) -%} {%- set isParent = item.url
    != '/' and item.url in page.url -%}
    <a
        href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}"
        class="block mt-4 lg:inline-block lg:mt-0 text-{{
            site.color.lighter
        }} hover:text-{{
            site.color.accent
        }} mr-4 {% if isCurrent or isParent %}underline font-bold{% endif %}"
        {%
        if
        isCurrent
        %}aria-current="page"
        {%
        endif
        %}
    >
        {{ item.title }}
    </a>
    {%- endif -%} {%- endfor -%}
</div>
