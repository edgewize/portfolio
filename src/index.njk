<section class="bg-{{ site.color.background }}">
    <div class="mt-10 flex w-full justify-center items-center">
        <img
            class="outline rounded-full outline-{{ site.color.darkNeutral }}"
            src="{{
                site.imgcdn
            }}/taylor-edginton-headshot.png?format=auto&h=200&w=200&fit=crop&crop=focalpoint&fp-z=1.5&fp-x=.5&fp-y=.3&mask=ellipse"
            srcset="{{
            site.imgcdn
        }}/taylor-edginton-headshot.png?format=auto&h=200&w=200&fit=crop&crop=focalpoint&fp-z=1.5&fp-x=.5&fp-y=.3&mask=ellipse 1x, 
        {{
            site.imgcdn
        }}/taylor-edginton-headshot.png?format=auto&h=400&w=400&fit=crop&crop=focalpoint&fp-z=1.5&fp-x=.5&fp-y=.3&mask=ellipse 2x"
            alt="Avatar of Taylor Edginton"
        />
