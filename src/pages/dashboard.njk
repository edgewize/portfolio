<section class="container">
    <h1 class="text-center font-header text-4xl mt-6 font-semibold uppercase text-primary sm:text-5xl lg:text-6xl">
        Idaho River Surfing
    </h1>
    <p class="text-center pt-6 font-header text-xl font-medium text-black sm:text-2xl lg:text-3xl">
        Boise Whitewater Park
    </p>
</section>
<section class="container py-16 md:py-20">
    <div class="flex flex-row space-x-4">
        <div class="grow rounded overflow-hidden shadow bg-slate-200">
            <img 
                id="timeline-loader"
                src="/assets/images/loading.gif"
                class="mx-auto py-36"
                height="40px" 
                width="40px"/>
            <div id="timeline"></div>
        </div>
        <div class="flex flex-col space-y-4">
            <div class="rounded overflow-hidden shadow bg-slate-200">
                <div class="text-center">
                    <span id="current-flow" class="mt-2 text-6xl font-black text-center"></span>
                    <span>cfs</span>
                </div>
                <div id="today-date" class="mx-4 mb-2 text-center"></div>
            </div>            
            <div class="flex lg:flex-row md:flex-col space-x-4 text-center">
                <div class="rounded overflow-hidden shadow bg-slate-200 grow">
                    <div id="week-delta" class="mt-2 text-3xl font-bold"></div>
                    <div class="mx-4 mb-2">Since last week</div>
                </div>
                <div class="rounded overflow-hidden shadow bg-slate-200 grow">
                    <div id="month-delta" class="mt-2 text-3xl font-bold"></div>
                    <div class="mx-4 mb-2">Since last month</div>
                </div>
            </div>
            <div class="rounded overflow-hidden shadow bg-slate-200">
                <img id="wavecam" src=""/>
            </div>
        </div>
    </div>
</section>
